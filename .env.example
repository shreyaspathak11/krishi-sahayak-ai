# .env.example - Copy this to .env and fill in your API keys

# === GROQ API CONFIGURATION ===
# Get your free API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# === WEATHER API CONFIGURATION ===
# Get your free API key from: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# === PRODUCTION DEPLOYMENT SETTINGS ===
# Application settings
ENVIRONMENT=production
PORT=8000
HOST=0.0.0.0

# Security settings
SECRET_KEY=your_secret_key_here

# Logging
LOG_LEVEL=INFO

# CORS settings (update with your domain)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Vector store settings
VECTOR_STORE_PATH=./vector_store
DATA_PATH=./data

# === EXOTEL CONFIGURATION (for phone calls) ===
# Voice integration currently disabled
EXOTEL_ACCOUNT_SID=your_exotel_account_sid
EXOTEL_API_KEY=your_exotel_api_key
EXOTEL_API_TOKEN=your_exotel_api_token

# === OPTIONAL: ALTERNATIVE AI PROVIDERS ===
# Uncomment and configure if you want to use alternative providers

# Anthropic Claude (paid but generous free tier)
# ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenAI (paid)
# OPENAI_API_KEY=your_openai_api_key

# Cohere (free tier available)
# COHERE_API_KEY=your_cohere_api_key
